<!DOCTYPE html>
<html lang="{{ app.request.locale }}" class="dark">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        <title>
            {% block title %}
                Kropla - Blog o IT dla programist√≥w | PHP, Symfony, Dobre praktyki
            {% endblock %}
        </title>

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            {{ encore_entry_link_tags('front') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('front') }}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>

    {# high contrast mode --> from-black to-darkgray bg-fixed dark:bg-gradient-to-tr dark:bg-black #}
    <body class="flex flex-col text-gray-700 bg-white dark:bg-zinc-900 dark:text-gray-400">
        {% include 'base/header.html.twig' %}

        <div class="container mx-auto flex grow pt-8 flex-col lg:flex-row">
            <aside class="app-aside sticky top-20 basis-1/6 self-start mt-[-19px] pt-[19px] bg-zinc-100 dark:bg-zinc-800 lg:dark:bg-transparent lg:bg-transparent">
                {% include 'components/menu/side_menu.html.twig' %}
            </aside>

            <main class="flex grow basis-4/6 flex-col px-6">
                {% block body %}

                {% endblock %}
            </main>

            <span class="basis-1/6">

            </span>
        </div>

        {% include 'base/footer.html.twig' %}
    </body>
</html>

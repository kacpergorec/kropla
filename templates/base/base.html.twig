{% include('base/header.html.twig') %}

<div class="container mx-auto mt-8 px-3 flex grow">
    <div class="flex grow">

        {# Side naviagiton menu #}
        <aside class="basis-1/6">
            {% include('components/menu/side_menu.html.twig') %}
        </aside>

        {# Main Content #}
        <main class="basis-4/6 px-6 flex flex-col">
           {% block body %}
           {% endblock %}
        </main>


        <aside class="basis-1/6">

        </aside>
    </div>
</div>

{% include('base/footer.html.twig') %}

</body>


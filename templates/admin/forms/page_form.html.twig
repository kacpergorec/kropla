{{ form_start(form, { attr: { class: 'form-control w-full' } }) }}

<div class="mb-8 flex w-full flex-col-reverse gap-8 lg:flex-row">
    <div class="grow font-extrabold">
        {{
            form_widget(
                form.title,
                {
                    attr: {
                        class: 'w-full h-full text-xl',
                        placeholder: 'Tytuł strony'
                    }
                }
            )
        }}
    </div>
    <div class="flex flex-wrap justify-items-stretch gap-4">
        <a class="button grow" href="" onclick="history.back()">Powrót</a>
        <button class="button button--info grow">Zapisz</button>
    </div>
</div>

<div class="flex flex-col gap-8 xl:flex-row">
    <div class="flex w-full grow basis-4/6 flex-col">
        {{ form_widget(form.content) }}
    </div>
    <div class="flex w-full basis-2/6 flex-col">
        {{ form_row(form.author) }}
        {{ form_row(form.category) }}
        {{ form_row(form.redirectUrl) }}
        {{ form_row(form.tags) }}
        <div class="flex gap-5 mt-6">
            {{ form_row(form.promoted) }}
            {{ form_row(form.published) }}
        </div>
        <div>
            {{ form_rest(form) }}
        </div>
    </div>
</div>

{{ form_end(form) }}
